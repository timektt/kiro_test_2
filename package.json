{
  "name": "community-platform",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "type-check": "tsc --noEmit",
    "db:push": "prisma db push",
    "db:migrate": "prisma migrate dev",
    "db:migrate:deploy": "prisma migrate deploy",
    "db:generate": "prisma generate",
    "db:seed": "tsx prisma/seed.ts",
    "db:setup": "tsx scripts/migrate-and-seed.ts",
    "db:setup:production": "tsx scripts/production-db-setup.ts",
    "db:reset": "prisma migrate reset --force && npm run db:seed",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:unit": "jest src/__tests__/components src/__tests__/hooks src/__tests__/lib src/__tests__/stores",
    "test:integration": "jest src/__tests__/api src/__tests__/integration",
    "test:components": "jest src/__tests__/components",
    "test:hooks": "jest src/__tests__/hooks",
    "test:api": "jest src/__tests__/api",
    "test:stores": "jest src/__tests__/stores",
    "test:lib": "jest src/__tests__/lib",
    "test:all": "tsx scripts/run-tests.ts",
    "test:ci": "jest --coverage --watchAll=false --passWithNoTests",
    "deploy": "bash scripts/deploy.sh",
    "docker:build": "docker build -t community-platform .",
    "docker:run": "docker-compose up -d",
    "docker:stop": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "health-check": "curl -f http://localhost:3000/api/health || exit 1",
    "validate-env": "node scripts/validate-env.js",
    "validate-deployment": "node scripts/post-deploy-validation.js",
    "validate-requirements": "node scripts/validate-requirements.js",
    "performance-audit": "node scripts/performance-audit.js",
    "test-auth": "tsx scripts/test-auth-providers.ts",
    "final-check": "node scripts/final-integration-check.js",
    "precommit": "npm run lint && npm run test:ci",
    "postinstall": "prisma generate"
  },
  "prisma": {
    "seed": "tsx prisma/seed.ts"
  },
  "dependencies": {
    "@hookform/resolvers": "^3.9.0",
    "@next-auth/prisma-adapter": "^1.0.7",
    "@prisma/client": "^5.19.0",
    "@radix-ui/react-alert-dialog": "^1.1.14",
    "@radix-ui/react-avatar": "^1.1.10",
    "@radix-ui/react-dialog": "^1.1.14",
    "@radix-ui/react-dropdown-menu": "^2.1.15",
    "@radix-ui/react-label": "^2.1.7",
    "@radix-ui/react-progress": "^1.1.7",
    "@radix-ui/react-radio-group": "^1.3.7",
    "@radix-ui/react-scroll-area": "^1.2.9",
    "@radix-ui/react-select": "^2.2.5",
    "@radix-ui/react-separator": "^1.1.7",
    "@radix-ui/react-slot": "^1.2.3",
    "@radix-ui/react-switch": "^1.2.6",
    "@radix-ui/react-tabs": "^1.1.12",
    "@radix-ui/react-toast": "^1.2.14",
    "@sentry/nextjs": "^10.5.0",
    "@types/jest": "^30.0.0",
    "@types/nodemailer": "^7.0.0",
    "@types/react-window": "^1.8.8",
    "@types/socket.io": "^3.0.2",
    "@vercel/analytics": "^1.5.0",
    "bcryptjs": "^2.4.3",
    "class-variance-authority": "^0.7.0",
    "cloudinary": "^2.0.0",
    "clsx": "^2.1.0",
    "date-fns": "^4.1.0",
    "lucide-react": "^0.400.0",
    "next": "^15.4.4",
    "next-auth": "^4.24.0",
    "next-themes": "^0.4.6",
    "nodemailer": "^6.10.1",
    "prisma": "^5.19.0",
    "react": "^18.3.0",
    "react-dom": "^18.3.0",
    "react-hook-form": "^7.52.0",
    "react-window": "^1.8.11",
    "socket.io": "^4.8.1",
    "socket.io-client": "^4.8.1",
    "sonner": "^2.0.7",
    "swr": "^2.2.0",
    "tailwind-merge": "^2.4.0",
    "tailwindcss-animate": "^1.0.7",
    "winston": "^3.17.0",
    "winston-daily-rotate-file": "^5.0.0",
    "zod": "^3.23.0",
    "zustand": "^4.5.0"
  },
  "devDependencies": {
    "@tailwindcss/typography": "^0.5.0",
    "@testing-library/jest-dom": "^6.4.0",
    "@testing-library/react": "^16.0.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/bcryptjs": "^2.4.6",
    "@types/node": "^20.14.0",
    "@types/react": "^18.3.0",
    "@types/react-dom": "^18.3.0",
    "@typescript-eslint/eslint-plugin": "^8.38.0",
    "@typescript-eslint/parser": "^8.38.0",
    "autoprefixer": "^10.4.0",
    "eslint": "^8.57.0",
    "eslint-config-next": "^14.2.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "node-mocks-http": "^1.17.2",
    "postcss": "^8.4.0",
    "prettier": "^3.3.0",
    "prettier-plugin-tailwindcss": "^0.6.0",
    "tailwindcss": "^3.4.0",
    "tsx": "^4.16.0",
    "typescript": "^5.5.0"
  }
}
